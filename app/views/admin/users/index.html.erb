<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><img src="<%= user.avatar.url(:small)  if user.methods.include?(:avatar) %>"></tdl>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Destroy', [:admin, user], method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
